<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding_item_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:layout_width="@dimen/button_size_width"
                android:layout_height="@dimen/button_size_width"
                app:srcCompat="@drawable/sakana180"
                android:id="@+id/imageViewIcon00" />

            <ImageView
                android:layout_width="@dimen/button_size_width"
                android:layout_height="@dimen/button_size_width"
                app:srcCompat="@drawable/sakana180"
                android:id="@+id/imageViewIcon01" />

            <ImageView
                android:layout_width="@dimen/button_size_width"
                android:layout_height="@dimen/button_size_width"
                app:srcCompat="@drawable/sakana180"
                android:id="@+id/imageViewIcon02" />

            <ImageView
                android:layout_width="@dimen/button_size_width"
                android:layout_height="@dimen/button_size_width"
                app:srcCompat="@drawable/sakana180"
                android:id="@+id/imageViewIcon03" />

            <ImageView
                android:layout_width="@dimen/button_size_width"
                android:layout_height="@dimen/button_size_width"
                app:srcCompat="@drawable/sakana180"
                android:id="@+id/imageViewIcon04" />

            <ImageView
                android:layout_width="@dimen/button_size_width"
                android:layout_height="@dimen/button_size_width"
                app:srcCompat="@drawable/sakana180"
                android:id="@+id/imageViewIcon05" />

        </GridLayout>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDescription"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
